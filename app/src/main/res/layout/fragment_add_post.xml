<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddPostFragment">

    <Button
        android:id="@+id/btn_type_post_found_pet"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/btn_type_post_yellow_radius"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/btn_label_found_pet_create_type_post"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_type_post_lost_pet"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="250dp"
        android:background="@drawable/btn_type_post_cian_radius"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/btn_label_lost_pet_create_type_post"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_type_post_found_pet"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_type_post_found_pet"
        app:layout_constraintTop_toBottomOf="@+id/btn_type_post_found_pet" />
</androidx.constraintlayout.widget.ConstraintLayout>